            <Button
                android:id="@+id/registerSailingClub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/registerSailingClub"
                android:background="?android:attr/selectableItemBackground"
                android:textStyle="bold"
                android:textSize="@dimen/textSizeLinkSmallScreen"
                android:paddingLeft="@dimen/paddingLinksSmall"
                android:paddingStart="@dimen/paddingLinksSmall"
                android:paddingRight="@dimen/paddingLinksSmall"
                android:paddingEnd="@dimen/paddingLinksSmall"
                android:textColor="@color/buttonColor_general"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
