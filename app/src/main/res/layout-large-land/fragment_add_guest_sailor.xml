<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="fragment.AddGuestSailorFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/guestAdjFactor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <EditText
        android:id="@+id/guestSailorName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/guestSailorName"
        android:layout_margin="10dp">
    </EditText>

    <EditText
        android:id="@+id/guestSailorBoatID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/guestSailorBoatNumber"
        android:layout_margin="10dp">
    </EditText>

    <Spinner
        android:id="@+id/spinnerBoatType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">
    </Spinner>

    <EditText
        android:id="@+id/guestPersonalHandicap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="none"
        android:hint="@string/guestSailorHandicap"
        android:layout_margin="10dp">
    </EditText>

    <Button
        android:id="@+id/addGuestSailor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/addGuestMember"
        android:textAllCaps="false"
        android:layout_margin="10dp"/>

</LinearLayout>
